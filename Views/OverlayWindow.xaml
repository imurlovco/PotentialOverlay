<Window x:Class="PotentialOverlay.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" Topmost="True" ShowInTaskbar="False">
    <Canvas x:Name="OverlayCanvas">
        <Rectangle x:Name="Mask0" Fill="Black" Opacity="0.8" Visibility="Collapsed"/>
        <Rectangle x:Name="Mask1" Fill="Black" Opacity="0.8" Visibility="Collapsed"/>
        <Rectangle x:Name="Mask2" Fill="Black" Opacity="0.8" Visibility="Collapsed"/>

        <TextBlock x:Name="Pick0" Text="✅ PICK" FontSize="24" FontWeight="Bold" Foreground="#00FF00" Visibility="Collapsed">
            <TextBlock.Effect><DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/></TextBlock.Effect>
        </TextBlock>
        <TextBlock x:Name="Pick1" Text="✅ PICK" FontSize="24" FontWeight="Bold" Foreground="#00FF00" Visibility="Collapsed">
             <TextBlock.Effect><DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/></TextBlock.Effect>
        </TextBlock>
        <TextBlock x:Name="Pick2" Text="✅ PICK" FontSize="24" FontWeight="Bold" Foreground="#00FF00" Visibility="Collapsed">
             <TextBlock.Effect><DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/></TextBlock.Effect>
        </TextBlock>
    </Canvas>
</Window>
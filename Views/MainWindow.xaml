<Window x:Class="PotentialOverlay.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <StackPanel Margin="15">
        <TextBlock Text="스텔라 소라 오버레이어" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <CheckBox x:Name="OverlayToggle" Content="오버레이 표시" IsChecked="True" Checked="OverlayToggle_Changed" Unchecked="OverlayToggle_Changed"/>
        
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="수동 분석" Click="ManualScan_Click" Height="30" Margin="0,0,5,0"/>
            <Button Content="데이터 새로고침" Click="ReloadData_Click" Grid.Column="1" Height="30" Margin="5,0,0,0"/>
        </Grid>

        <TextBlock x:Name="StatusText" Text="준비됨" Margin="0,10,0,0" Foreground="Gray" TextWrapping="Wrap"/>
        <TextBlock Text="* 게임을 창 모드로 실행해주세요." FontSize="10" Foreground="Red" Margin="0,5,0,0"/>
    </StackPanel>
</Window>